# Bash colors
black=$(tput setaf 0)
red=$(tput setaf 1)
green=$(tput setaf 2)
yellow=$(tput setaf 3)
blue=$(tput setaf 4)
purple=$(tput setaf 5)
cyan=$(tput setaf 6)
white=$(tput setaf 7)
blackbg=$(tput setab 0)
redbg=$(tput setab 1)
greenbg=$(tput setab 2)
yellowbg=$(tput setab 3)
bluebg=$(tput setab 4)
purplebg=$(tput setab 5)
cyanbg=$(tput setab 6)
whitebg=$(tput setab 7)

bold=$(tput bold)
reset=$(tput sgr0)

